<div data-section-id="{{ section.id }}" data-section-type="section-product-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-product-v7">
    <div class="container container-v2">
      <div class="row mini-content">
        <div class="col-lg-4 col-12 order-lg-1 order-2 order-md-2 col-md-6">

          {% assign products_limit1 = section.settings.products_limit1 %}
          {% assign col1 = section.settings.select_collection1 %}
            <div class="product-list">
              <div class="section-title">
               <h3 class="title_heading2 mb-0">
                  <span class="title">{{section.settings.block_title1}}</span>
                </h3>
              </div>

              <div class="product-list-grid">
                {% for product in collections[col1].products limit: products_limit1 %}
                {% include 'product-item-v2' %}
                {% else %}
                {% for i in (1..3) %}
                {% include 'empty-product-item-v2' %}
                {% endfor %}
                {% endfor %}
              </div>
          </div>
        </div>
        <div class="col-lg-4 order-md-3 order-3 order-lg-2 col-md-6 col-12">
          {% assign products_limit2 = section.settings.products_limit2 %}
          {% assign col2 = section.settings.select_collection2 %}
          <div class="product-list">
            <div class="section-title">
              <h3 class="title_heading2 mb-0">
                <span class="title">{{section.settings.block_title2}}</span>
              </h3>
            </div>
            <div class="product-list-grid">
              {% for product in collections[col2].products limit: products_limit2 %}
              {% include 'product-item-v2' %}
              {% else %}
              {% for i in (1..3) %}
              {% include 'empty-product-item-v2' %}
              {% endfor %}
              {% endfor %}
            </div>
          </div>
        </div>

        <div class="col-lg-4 order-md-1 order-1 order-lg-3 col-md-12 col-12 pb-4 pb-lg-0 text-center">
          <div class="banner">
            <a href="" class="adv-thumb-link">
              {% if section.settings.banner_img != blank %}
              <img src="{{section.settings.banner_img | img_url:'master'}}" alt="banner" />
              {% else %}
              <img src="//via.placeholder.com/470x600" class="img-fluid" alt="">
              {% endif %}
            </a>
            <div class="banner-info">
              {% if section.settings.banner_sub_title != blank %}
              <div class="sub-title">
                <span>{{section.settings.banner_sub_title}}</span>
              </div>
              {% endif %}

              {% if section.settings.banner_title != blank %}
              <div class="banner-title">
                <h4>{{section.settings.banner_title}}</h4>
              </div>
              {% endif %}

              <a href="{{section.settings.button_url}}" class="button-main1">{{section.settings.button_name}}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "PRODUCT V7",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "header",
      "content": "Product 1"
    },
    {
      "type": "text",
      "id": "block_title1",
      "label": "Title",
      "default": "FEATURED PRODUCTS"
    },
    {
      "type": "collection",
      "id": "select_collection1",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit1",
      "label": "Limit products",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 3
    },
    {
      "type": "header",
      "content": "Product 2"
    },
    {
      "type": "text",
      "id": "block_title2",
      "label": "Title",
      "default": "FEATURED PRODUCTS"
    },
    {
      "type": "collection",
      "id": "select_collection2",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit2",
      "label": "Limit products",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 3
    },
    {
      "type": "header",
      "content": "Banner"
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "info": "370 x 463px recommended",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "banner_sub_title",
      "label": "Banner sub title",
      "default": "Discover"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner title",
      "default": "Women perfume"
    },
    {
      "type": "text",
      "id": "button_name",
      "label": "Button name",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "PRODUCT V7",
      "category": "HOME"
    }
  ]
}
{% endschema %}


